<window type="dialog">
	<defaultcontrol always="true">10</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>240</posx>
		<posy>60</posy>
	</coordinates>
	<include>dialogeffect</include>
	<controls>
		<!-- Dialog background //-->
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>800</width>
			<height>540</height>
			<texture border="50">dialog.png</texture>
		</control>
		<control type="group">
			<!-- Standard dialog header //-->
			<control type="label">
				<description>header label</description>
				<posx>40</posx>
				<posy>30</posy>
				<width>720</width>
				<height>30</height>
				<label>$ADDON[pvr.mediaportal.tvserver 30100]</label>
				<align>center</align>
				<aligny>center</aligny>
				<font>font-32</font>
				<textcolor>blue</textcolor>
			</control>
			<control type="image">
				<posx>40</posx>
				<posy>70</posy>
				<width>720</width>
				<height>2</height>
				<texture border="30,0,30,0">separator.png</texture>
			</control>

			<include>dialogeffect4</include>
			<control type="button">
				<posx>730</posx>
				<posy>37</posy>
				<width>20</width>
				<height>20</height>
				<texturefocus>close-window-focus.png</texturefocus>
				<texturenofocus>close-window-nofocus.png</texturenofocus>
				<onclick>Dialog.Close(pvrtimersetting)</onclick>
				<visible>Skin.HasSetting(TouchScreenMode)</visible>
			</control>
		</control>

		<!-- Dialog specific controls //-->
		<control type="group">
			<posx>40</posx>
			<posy>70</posy>
			<control type="label" description="Program title" id = "20">
				<posx>0</posx>
				<posy>0</posy>
				<width>720</width>
				<height>30</height>
				<font>Font_19</font>
				<!--<label>filled in by code</label>-->
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
			</control>
			<control type="label" description="Program start time" id="21">
				<posx>0</posx>
				<posy>30</posy>
				<width>720</width>
				<height>30</height>
				<font>Font_19</font>
				<!--<label>filled in by code</label>-->
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
			</control>
			<control type="label" description="Program channel" id="22">
				<posx>0</posx>
				<posy>60</posy>
				<width>720</width>
				<height>30</height>
				<font>Font_19</font>
				<!--<label>filled in by code</label>-->
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
			</control>
		</control>
		<control type="image">
			<posx>40</posx>
			<posy>160</posy>
			<width>720</width>
			<height>1</height>
			<texture border="20,0,20,0">separator.png</texture>
		</control>

		<control type="grouplist" description ="spincontrols" id="23">
			<posx>40</posx>
			<posy>170</posy>
			<itemgap>5</itemgap>
			<width>720</width>
			<height>290</height>
			<onup>9001</onup>
			<ondown>9001</ondown>

			<control type="spincontrolex" id="10">
				<description>Frequency</description>
				<width>720</width>
				<height>40</height>
				<label>$ADDON[pvr.mediaportal.tvserver 30101]</label>
				<onright>10</onright>
				<onleft>10</onleft>
			</control>

			<control type="spincontrolex" id="11">
				<description>Airtime</description>
				<width>720</width>
				<height>40</height>
				<label>$ADDON[pvr.mediaportal.tvserver 30102]</label>
				<onright>11</onright>
				<onleft>11</onleft>
			</control>

			<control type="spincontrolex" id="12">
				<description>Channels</description>
				<width>720</width>
				<height>40</height>
				<label>$ADDON[pvr.mediaportal.tvserver 30103]</label>
				<onright>12</onright>
				<onleft>12</onleft>
			</control>

			<control type="image" id="24">
				<description>Separator</description>
				<width>720</width>
				<height>1</height>
				<texture border="20,0,20,0">separator.png</texture>
			</control>

			<control type="spincontrolex" id="13">
				<description>Keep</description>
				<width>720</width>
				<height>40</height>
				<label>$ADDON[pvr.mediaportal.tvserver 30104]</label>
				<onright>13</onright>
				<onleft>13</onleft>
			</control>

			<control type="spincontrolex" id="14">
				<description>Record minutes before start</description>
				<width>720</width>
				<height>40</height>
				<label>$ADDON[pvr.mediaportal.tvserver 30105]</label>
				<onright>14</onright>
				<onleft>14</onleft>
			</control>

			<control type="spincontrolex" id="15">
				<description>Record minutes after end</description>
				<width>720</width>
				<height>40</height>
				<label>$ADDON[pvr.mediaportal.tvserver 30106]</label>
				<onright>15</onright>
				<onleft>15</onleft>
			</control>
		</control>

		<!-- Dialog Ok/Cancel buttons //-->
		<control type="grouplist" id="9001">
			<posx>190</posx>
			<posy>465</posy>
			<onup>15</onup>
			<ondown>10</ondown>
			<orientation>horizontal</orientation>
			<control type="button" id="1">
				<description>Ok Button</description>
				<width>200</width>
				<height>35</height>
				<font>font-20</font>
				<textcolor>white</textcolor>
				<focusedcolor>white</focusedcolor>
				<shadowcolor>black</shadowcolor>
				<align>center</align>
				<aligny>center</aligny>
				<texturefocus border="7">button-nofocus.png</texturefocus>
				<texturenofocus border="7">button-nofocus.png</texturenofocus>
				<label>186</label>
				<onleft>2</onleft>
				<onright>2</onright>
			</control>
			<control type="button" id="2">
				<description>Cancel Button</description>
				<width>200</width>
				<height>35</height>
				<font>font-20</font>
				<textcolor>white</textcolor>
				<focusedcolor>white</focusedcolor>
				<shadowcolor>black</shadowcolor>
				<align>center</align>
				<aligny>center</aligny>
				<texturefocus border="7">button-nofocus.png</texturefocus>
				<texturenofocus border="7">button-nofocus.png</texturenofocus>
				<label>222</label>
				<onleft>1</onleft>
				<onright>1</onright>
			</control>
		</control>
		<control type="image">
			<posx>190</posx>
			<posy>465</posy>
			<width>200</width>
			<height>35</height>
			<texture border="7">button-focus.png</texture>
			<animation effect="slide" start="0,0" end="200,0" time="200" condition="Control.HasFocus(2)">Conditional</animation>
			<animation effect="fade" start="70" end="100" time="750" pulse="true" condition="true">Conditional</animation>
			<visible>Control.HasFocus(1) | Control.HasFocus(2)</visible>
		</control>
	</controls>
</window>
